<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nayak.EMSystem.HigherLoginPageController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Label text="Login" textFill="#0ae14e" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Login ID :" />
                        <TextField fx:id="loginID" promptText="Login ID" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Password :" />
                        <PasswordField fx:id="loginPassword" promptText="Password" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button onMouseClicked="#getButtonEvent" fx:id="closeBtn" mnemonicParsing="false" text="Close">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button onMouseClicked="#getButtonEvent" fx:id="loginBtn" mnemonicParsing="false" text="Login">
                    <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" right="20.0" top="20.0" />
            </padding>
            <BorderPane.margin>
                <Insets left="20.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>
